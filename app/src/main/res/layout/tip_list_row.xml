<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ff7bc6e5"
        android:layout_margin="5dp"
        android:layout_gravity="bottom|left"
        >

        <TextView
            android:id="@+id/row_item_title"
            android:text="Pay Attention"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:textSize="35dp"
            android:paddingTop="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="20dp"
            android:layout_margin="0dp"/>


        <TextView
            android:id="@+id/row_item_description"
            android:text="Pay Attention to what is around you"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#80ffffff"
            android:textSize="22dp"
            android:padding="5dp"
            android:gravity="left"
            android:layout_alignBottom="@id/row_item_title"
            />


    </RelativeLayout>

</FrameLayout>